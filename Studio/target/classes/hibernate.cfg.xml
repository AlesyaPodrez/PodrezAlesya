<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <mapping class = "com.springapp.mvc.domain.Actor"></mapping>
        <mapping class = "com.springapp.mvc.domain.Project"></mapping>
        <mapping class = "com.springapp.mvc.domain.Role"></mapping>
        <mapping class = "com.springapp.mvc.domain.myType"></mapping>
        <mapping class = "com.springapp.mvc.domain.Staff"></mapping>
        <mapping class = "com.springapp.mvc.domain.Post"></mapping>
    </session-factory>
</hibernate-configuration>